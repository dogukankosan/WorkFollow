@model List<MVCFirmaCagri.Models.Entitiy.Message>
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-comment-o"></i><span class="badge blue">@Model.Count</span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <div class="notification_header">
                <h3>@Model.Count Yeni Mesajınız Var</h3>
            </div>
        </li>
        @foreach (var item in Model)
        {
            <li>
                <a href="~/Message/SenderList" class="grid">
                    <div class="user_img"><img src="@MVCFirmaCagri.ImageBinary.BinaryImage.ToBase64ImageString(item.Company1.CompanyImage)" alt=""></div>
                    <div class="notification_desc">
                        <p>@item.Company1.CompanyName Tarafından Gelen Mesaj </p>
                        <span>@item.C_Date.Value.ToString("f")</span>
                    </div>
                </a>
            </li>
        }
        <li>
            <div class="notification_bottom">
                <a href="~/Message/SenderList" class="bg-primary">Gelen Tüm Mesajlar</a>
            </div>
        </li>
    </ul>
</li>