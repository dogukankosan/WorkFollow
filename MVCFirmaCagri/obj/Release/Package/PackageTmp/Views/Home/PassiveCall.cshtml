@using MVCFirmaCagri.Models.Entitiy
@model List<MVCFirmaCagri.Models.Entitiy.CompanyCall>
@{
    ViewBag.Title = "PassiveCall";
    Layout = "~/Views/Shared/_SideLayout.cshtml";
}
<h2 class="text-danger">@ViewBag.dgr</h2>
<hr />
<table class="table table-hover" id="tbl1">
    <thead>
        <tr>
            <th>ŞİRKET ADI</th>
            <th>ŞİRKET TELEFON</th>
            <th>KONU</th>
            <th>AÇIKLAMA</th>
            <th>TARİH</th>
            <th>DETAY</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CompanyCall x in Model)
        {
            <tr>
                <td>@x.Company.CompanyName</td>
                <td>@x.Company.CompanyTel</td>
                <td>@x.Subject</td>
                <td>@x.Description</td>
                <td>@x.C_Date.ToString("f")</td>
                <td><a href="~/Home/Details/@x.ID" class="btn btn-warning">DETAY</a></td>
            </tr>
        }
    </tbody>
</table>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script>
    $('#tbl1').DataTable(
        {
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            }
        }
    );
</script>